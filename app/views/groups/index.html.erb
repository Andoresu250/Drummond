<h1>Lista de grupos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th># Trabajadores</th>
            <th>Estado</th>
            <th colspan="3">
                Acciones</th>
        </tr>
    </thead>

    <tbody>
        <% @groups.each do |group| %>
        <tr>
            <td><%= group.group_id.name %></td>
            <td><%= group.workers.count %></td>
            <td><%= group.current %></td>
            <td>
                <div class="row">
                    <%= link_to '<i class="fa fa-eye"></i> Ver'.html_safe, group, :class => "btn btn-info" %>
                    <%= link_to '<i class="fa fa-trash"></i> Eliminar'.html_safe , group, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
